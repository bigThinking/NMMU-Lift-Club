<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="za.ac.nmmu.lift_club.ViewRideDetails">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        android:id="@+id/view3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id = "@+id/user_pic2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/bad_profile_pic_2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id = "@+id/car_pic2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/user_pic2"
        android:layout_toRightOf="@+id/user_pic2"
        android:layout_toEndOf="@+id/user_pic2"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/scionxdoutline640" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_pic2"
        android:layout_marginTop="10dp" />


</RelativeLayout>
