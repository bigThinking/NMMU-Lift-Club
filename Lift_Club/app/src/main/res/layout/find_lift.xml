<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="false"
    tools:context=".FindLiftFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RadioGroup
            android:id="@+id/rgpCampusDirr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtnTo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:checked="true"
                android:text="To campus" />

            <RadioButton
                android:id="@+id/rbtnFrom2"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_toEndOf="@+id/rgpCampusDirr2"
                android:layout_toRightOf="@+id/rgpCampusDirr2"
                android:checked="false"
                android:text="From campus" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rgpCampusDirr2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="Select campus :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spnCampus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_below="@+id/rgpCampusDirr2"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:spinnerMode="dropdown"
            android:layout_marginRight="5dp"
            android:foregroundTint="@color/nmmu_blue" />

        <RadioGroup
            android:id="@+id/rgpTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spnCampus2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:checked="true"
                android:text="Now" />

            <RadioButton
                android:id="@+id/rbtLater"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_toEndOf="@+id/rgpTime1"
                android:layout_toRightOf="@+id/rgpTime1"
                android:checked="false"
                android:text="Later" />
        </RadioGroup>

        <include
            android:id="@+id/dt2"
            layout="@layout/date_time_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rgpTime1"
            android:layout_alignStart="@+id/rgpTime1"
            android:layout_below="@+id/rgpTime1" />

        <CheckBox
            android:id="@+id/cbxBoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spnPoint"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:text="I need the boot"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnOk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbxBoot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/nmmu_blue"
            android:text="Ok"
            android:textColor="@color/window_background" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnOk1"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/spnCampus2"
            android:layout_toStartOf="@+id/spnCampus2"
            android:text="Sort by :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:spinnerMode="dropdown" />

        <ListView
            android:id="@+id/lstRides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnSort"
            android:layout_marginTop="5dp"
            android:choiceMode="singleChoice" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dt2"
            android:layout_marginTop="5dp"
            android:text="Select pickup point : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:layout_marginLeft="12dp" />

        <Spinner
            android:id="@+id/spnPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/dt2"
            android:foregroundTint="@color/nmmu_blue" />


    </RelativeLayout>
</ScrollView>
