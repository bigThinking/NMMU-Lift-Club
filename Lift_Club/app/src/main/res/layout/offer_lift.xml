<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="false"
    tools:context=".OfferLiftFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RadioGroup
            android:id="@+id/rgpCampusDirr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtnTo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:checked="true"
                android:text="To campus" />

            <RadioButton
                android:id="@+id/rbtnFrom3"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_toEndOf="@+id/rgpCampusDirr3"
                android:layout_toRightOf="@+id/rgpCampusDirr3"
                android:checked="false"
                android:text="From campus" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgpTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rgpCampusDirr3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtNow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:checked="true"
                android:text="Now" />

            <RadioButton
                android:id="@+id/rbtLater1"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_toEndOf="@+id/rgpTime2"
                android:layout_toRightOf="@+id/rgpTime2"
                android:checked="false"
                android:text="Later" />
        </RadioGroup>

        <include layout="@layout/date_time_field"
            android:id ="@+id/dt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rgpTime2"
            android:layout_alignLeft="@+id/rgpTime2"
            android:layout_alignStart="@+id/rgpTime2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select route:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:layout_below="@+id/dt1"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spnRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/imgbtnMinus1"
            android:layout_alignStart="@+id/imgbtnMinus1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:foregroundTint="@color/nmmu_blue" />

        <CheckBox
            android:id="@+id/cbxOnlyGender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:text="Only"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView5"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spnRoute"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Enter price: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/imgbtnMinus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:background="@color/window_background"
            android:src="@drawable/ic_action_remove_circle_outline"
            android:tint="@color/nmmu_blue" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/imgbtnMinus1"
            android:layout_toRightOf="@+id/imgbtnMinus1"
            android:text="R"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imgbtnPlus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPrice"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/txtPrice"
            android:background="@color/window_background"
            android:src="@drawable/ic_action_add_circle_outline"
            android:tint="@color/nmmu_blue" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Enter number of seats:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/imgbtnMinus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/textView5"
            android:background="@color/window_background"
            android:src="@drawable/ic_action_remove_circle_outline"
            android:tint="@color/nmmu_blue" />

        <TextView
            android:id="@+id/txtAvailSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgbtnMinus2"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/imgbtnMinus2"
            android:text="12"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imgbtnPlus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgbtnMinus2"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/txtAvailSeats"
            android:background="@color/window_background"
            android:src="@drawable/ic_action_add_circle_outline"
            android:tint="@color/nmmu_blue" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cbxOnlyGender2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Comments:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edtComments"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtComments"
            android:layout_centerHorizontal="true"
            android:background="@color/nmmu_blue"
            android:text="Offer lift"
            android:textColor="@color/window_background" />


    </RelativeLayout>
</ScrollView>

